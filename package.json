{
  "name": "create-waskit",
  "version": "0.1.2",
  "homepage": "https://pankaj72885.github.io/create-waskit/doc.html",
  "description": "WASKit (Web App Starter Kit) is a command-line tool designed to streamline the setup of modern web projects. It scaffolds new projects with Vite and Tailwind CSS, offering flexible templates for JavaScript or TypeScript, with options for Vanilla or React setups. This tool enables developers to kickstart their projects with minimal configuration.",
  "keywords": [
    "waskit",
    "Front-end",
    "web-app-starter-kit",
    "vite",
    "tailwindcss",
    "javascript",
    "typescript",
    "react",
    "vanilla-js",
    "project-setup",
    "scaffolding",
    "Web App Starter Kit",
    "pankaj",
    "templates",
    "bun"
  ],
  "bin": {
    "create-waskit": "./bin/waskit.js"
  },
  "scripts": {
    "test": "bun test",
    "lint": "bun run eslint .",
    "format": "bun run prettier --write .",
    "version": "bun run bin/waskit.js --version",
    "list-templates": "bun run bin/waskit.js list"
  },
  "author": "Pankaj Bepari",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "inquirer": "^12.6.0"
  },
  "devDependencies": {
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3"
  },
  "type": "module",
  "files": [
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pankaj72885/create-waskit.git"
  },
  "bugs": {
    "url": "https://github.com/pankaj72885/create-waskit/issues"
  },
